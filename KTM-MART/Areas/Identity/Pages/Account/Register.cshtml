@page
@using KTM_MART.Utility;
@model RegisterModel
<div class="main-container container">

    <!-- Breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Register</a></li>
      
    </ul>

    <!-- /Breadcrumb -->
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><i class="fa fa-ticket"></i>Register a new account here.</h4>
                </div>

                <div class="panel-body row">
                    <div class="col-md-6 form-group required">
                        <label asp-for="Input.Name">Name</label>
                        <input class="form-control" asp-for="Input.Name">
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Input.State">State</label>
                        <input class="form-control" asp-for="Input.State">
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Input.City">City</label>
                        <input class="form-control" asp-for="Input.City">
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Input.StreetAddress">Street Address</label>
                        <input class="form-control" asp-for="Input.StreetAddress">
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="Input.PostalCode">Postal Code</label>
                        <input class="form-control" asp-for="Input.PostalCode">
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group required">
                        <label asp-for="Input.PhoneNumber">Contact</label>
                        <input class="form-control" asp-for="Input.PhoneNumber">
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group required">
                        <label asp-for="Input.Email">Email</label>
                        <input class="form-control" asp-for="Input.Email">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group required">
                        <label asp-for="Input.Password">Password</label>
                        <input class="form-control" asp-for="Input.Password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div><div class="col-md-6 form-group required">
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <input class="form-control" asp-for="Input.ConfirmPassword">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                   @* @if (User.IsInRole(SD.Role_Admin))
                    {*@
                        <div class="col-md-6 form-group">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control">
                                <option disabled selected>--Select Role--</option>
                            </select>
                        </div>
                    @*}*@
                    <div class="col-md-6 form-group">
                        <select asp-for="Input.CompanyId"style="display:none;" asp-items="@Model.Input.CompanyList" class="form-control">
                            <option disabled selected>--Select Company--</option>
                        </select>
                    </div>
                </div>
            </div>

            <hr>
            <button class="btn btn-primary" type="submit">Create</button>


            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-danger">
                <span class="btn-text">Cancel</span><span class="icon-label">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </form>
        <br /><br />

    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function(){
            $('#Input_Role').change(function(){
                var selection = $('#Input_Role Option:Selected').text();
                if(selection != 'Company')
                {
                    $('#Input_CompanyId').hide();

                }
                else
                {
                    $('#Input_CompanyId').show();
                    
                }
            })
        })
    </script>
}
