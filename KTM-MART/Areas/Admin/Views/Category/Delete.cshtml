@model Category
@{
    ViewData["Title"] = "Delete";
}
<div class="main-container container">


    <div class="col-md-6">
        <form method="post" asp-controller="Category" asp-action="DeletePOST">
            <input asp-for="Id" hidden>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><i class="fa fa-ticket"></i> Do you want to add a new category?</h4>
                </div>
                <div class="panel-body row">
                    <div class="col-md-12 form-group"> 
                        <input class="form-control" asp-for="Name" disabled> 
                    </div>
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Delete Category</button>
        </form>
        <br /><br />
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}